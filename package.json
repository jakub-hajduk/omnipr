{
  "name": "omnipr",
  "version": "0.0.0",
  "description": "OmniPR creates pull requests across Git providers like GitHub, GitLab, Bitbucket, etc. Itâ€™s modular, provider-agnostic, and works in Node.js/browser.",
  "keywords": ["pull request", "pr", "git", "github", "gitlab", "bitbucket"],
  "scripts": {
    "build": "pkgroll",
    "check": "biome check",
    "fix": "biome check --fix"
  },
  "author": {
    "name": "Jakub Hajduk",
    "email": "devhajduk@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "ky": "^1.7.4"
  },
  "devDependencies": {
    "@gitbeaker/rest": "^40.4.0",
    "@octokit/rest": "^21.0.2",
    "bitbucket": "^2.12.0",
    "@biomejs/biome": "1.9.4",
    "@octokit/types": "^13.6.2",
    "@types/node": "^22.7.4",
    "pkgroll": "^2.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jakub-hajduk/omnipr.git"
  },
  "type": "module",
  "files": ["dist"],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      }
    },
    "./pull-request": {
      "import": {
        "default": "./dist/pull-request.js",
        "types": "./dist/pull-request.d.ts"
      },
      "require": {
        "default": "./dist/pull-request.cjs",
        "types": "./dist/pull-request.d.cts"
      }
    },
    "./github": {
      "import": {
        "default": "./dist/providers/github.js",
        "types": "./dist/providers/github.d.ts"
      },
      "require": {
        "default": "./dist/providers/github.cjs",
        "types": "./dist/providers/github.d.cts"
      }
    },
    "./gitlab": {
      "import": {
        "default": "./dist/providers/gitlab.js",
        "types": "./dist/providers/gitlab.d.ts"
      },
      "require": {
        "default": "./dist/providers/gitlab.cjs",
        "types": "./dist/providers/gitlab.d.cts"
      }
    },
    "./bitbucket": {
      "import": {
        "default": "./dist/providers/bitbucket.js",
        "types": "./dist/providers/bitbucket.d.ts"
      },
      "require": {
        "default": "./dist/providers/bitbucket.cjs",
        "types": "./dist/providers/bitbucket.d.cts"
      }
    }
  }
}
